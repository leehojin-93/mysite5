<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="board">

	<resultMap id="resultMapBoardVo" type="BoardVo">
		<result column="no" property="no" />
		<result column="title" property="title" />
		<result column="content" property="content" />
		<result column="hit" property="hit" />
		<result column="reg_date" property="date" />
		<result column="user_no" property="userNo" />
		<result column="name" property="name" />
	</resultMap>

	<select id="boardList" parameterType="String" resultMap="resultMapBoardVo">
		<![CDATA[
			SELECT
			    b.no,
			    b.title,
			    b.hit,
			    b.reg_date,
			    b.user_no,
			    u.name
			FROM
			    board b LEFT OUTER JOIN users u
			    ON b.user_no = u.no
		]]>

		<if test=" value != null or value != '' ">
	    <![CDATA[
	    	WHERE
			    b.title LIKE '%'||#{keyword}||'%'
			    OR u.name LIKE '%'||#{keyword}||'%'
		]]>
		</if>

	    <![CDATA[
			ORDER BY
				b.no DESC
		]]>
	</select>
	
	<select id="listCount" parameterType="String" resultType="int">
		<![CDATA[
			SELECT
			    COUNT(no)
		]]>
		<choose>
			<when test=" value != null or value != '' ">
		    <![CDATA[
		    	FROM
		    		(
		    			SELECT
		    				b.no
		    			FROM
		    				board b RIGHT OUTER JOIN users u
		    				ON u.no = b.user_no
		    			WHERE
						    b.title LIKE '%'||#{keyword}||'%'
						    OR u.name LIKE '%'||#{keyword}||'%'
						)
			]]>
			</when>
			
			<otherwise>
			<![CDATA[
				FROM
					board
			]]>
			</otherwise>
		</choose>
	</select>
	
	<insert id="write" parameterType="BoardVo">
		<![CDATA[
			INSERT INTO
				board
			VALUES
				(
					sqc_board_no.NEXTVAL,
		]]>
		
		<choose>
			<when test=" title == '' and content != '' ">
			<![CDATA[
					'제목을 입력해 주세요',
					#{ content },
			]]>
			</when>
			
			<when test=" title != '' and content == '' ">
			<![CDATA[
					#{ title },
					'내용을 입력해 주세요',
			]]>
			</when>
			
			<when test=" title == '' and content == '' ">
			<![CDATA[
					'제목을 입력해 주세요',
					'내용을 입력해 주세요',
			]]>
			</when>
			
			<otherwise>
			<![CDATA[
					#{ title },
					#{ content },
			]]>
			</otherwise>
		</choose>
		
		<![CDATA[
					0,
					sysdate,
					#{ userNo }
				)
		]]>
	</insert>
	
	<update id="countHit" parameterType="int">
		<![CDATA[
			UPDATE
				board
			SET
				hit = ( hit + 1 )
			WHERE
				no = #{ no }
		]]>
	</update>
	
	<select id="getBoard" parameterType="int" resultMap="resultMapBoardVo">
		<![CDATA[
			SELECT
			    b.no,
			    b.title,
			    b.content,
			    b.hit,
			    b.reg_date,
			    b.user_no,
			    u.name
			FROM
			    board b, users u
			WHERE
			    b.user_no = u.no
			    AND b.no = #{ no }
		]]>
	</select>
	
	<update id="modify" parameterType="BoardVo">
		<![CDATA[
			UPDATE
				board
		]]>
		<choose>
			<when test=" title == '' and content != '' ">
			<![CDATA[
				SET
					title = '제목을 입력해 주세요',
					content = #{ content }
			]]>
			</when>
			
			<when test=" title != '' and content == '' ">
			<![CDATA[
				SET
					title = #{ title },
					content = '내용을 입력해 주세요'
			]]>
			</when>
			
			<when test=" title == '' and content == '' ">
			<![CDATA[
				SET
					title = '제목을 입력해 주세요',
					content = '내용을 입력해 주세요'
			]]>
			</when>
			
			<otherwise>
			<![CDATA[
				SET
					title = #{ title },
					content = #{ content }
			]]>
			</otherwise>
		</choose>
		<![CDATA[
			WHERE
				no = #{ no }
		]]>
	</update>
	
	<delete id="delete" parameterType="int">
		<![CDATA[
			DELETE FROM
				board
			WHERE
				no = #{ no }
		]]>
	</delete>

</mapper>